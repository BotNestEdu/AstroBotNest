---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { slugify } from '../../utils/slugify';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  const allTags = new Set();
  for (const post of posts) {
    (post.data.tags || []).forEach(tag => {
      allTags.add(tag.toLowerCase());
    });
  }

  return Array.from(allTags).map(tag => ({
    params: { tag: slugify(tag) },
  }));
}

const { tag } = Astro.params;

// Convertir slug inverso para mostrar en título y descripción
const readableTag = tag.replace(/-/g, ' ');
const titleCase = readableTag.replace(/\b\w/g, l => l.toUpperCase());

const posts = (await getCollection('blog')).filter((post) =>
  (post.data.tags || []).some((t) => slugify(t) === tag)
);
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead 
      title={`Artículos sobre ${titleCase} | BotNest`} 
      description={`Explora todos los artículos etiquetados con "${readableTag}"`} 
    />
    <link rel="canonical" href={`https://botnest.es/tags/${tag}/`} />
    <style>
      main {
        max-width: 960px;
        margin: 0 auto;
        padding: 3rem 1rem;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: #274346;
        text-transform: capitalize;
      }

      .tile-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
      }

      .tile {
        background: var(--bg-element);
        border-radius: 12px;
        overflow: hidden;
        text-decoration: none;
        color: var(--text-color);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        display: flex;
        flex-direction: column;
      }

      .tile:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
      }

      .tile img {
        width: 100%;
        height: 160px;
        object-fit: cover;
        display: block;
        border-bottom: 1px solid #eee;
      }

      .tile h3 {
        font-size: 1rem;
        padding: 0.8rem 1rem 1rem;
        margin: 0;
        text-align: left;
        line-height: 1.3;
      }

      .no-posts {
        color: #666;
        font-style: italic;
      }
    </style>
  </head>
  <body>
    <Header />
    <main role="main" aria-label={`Artículos con la etiqueta ${readableTag}`}>
      <h1>Artículos etiquetados con <strong>{readableTag}</strong></h1>

      {
        posts.length === 0 ? (
          <p class="no-posts">No hay artículos con esta etiqueta aún.</p>
        ) : (
          <section class="tile-grid">
            {
              posts.map((post) => (
                <article class="tile">
                  <a href={`/blog/${post.data.slug}/`}>
                    <img src={post.data.heroImage} alt={post.data.title} />
                    <h3>{post.data.title}</h3>
                  </a>
                </article>
              ))
            }
          </section>
        )
      }
    </main>
    <Footer />
  </body>
</html>
